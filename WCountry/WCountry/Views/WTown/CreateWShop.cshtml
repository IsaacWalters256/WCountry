@model WShop
@{
    ViewData["Title"] = "WShopCreate";
}

<div class="text-center">
    <h1 class="display-4">Create a WShop</h1>

    <form method="post" class="container">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <label asp-for="WShopName" class="control-label col-sm-2 col-md-6">WShop Name:</label>
            <input asp-for="WShopName" placeholder="Title" class="form-control col-sm-6 col-md-8" /><br />
        </div>
        <div class="row">
            <button type="submit" class="form-control btn btn-primary col-sm-6 col-md-8 mt-3">Submit</button>
        </div>
    </form>

</div>