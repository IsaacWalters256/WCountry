@model Item
@{
    ViewData["Title"] = "ItemCreate";
}

<div class="text-center">
    <h1 class="display-4">Create an Item</h1>

    <form method="post" class="container">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <label asp-for="ItemName" class="control-label col-sm-2 col-md-6">Item Name:</label>
            <input asp-for="ItemName" placeholder="Title" class="form-control col-sm-6 col-md-8" /><br />
        </div>
        <div class="row">
            <label asp-for="ItemDesc" class="control-label col-sm-2 col-md-6">Item Description:</label>
            <input asp-for="ItemDesc" placeholder="Title" class="form-control col-sm-6 col-md-8" /><br />
        </div>
        <div class="row">
            <label asp-for="ItemPrice" class="control-label col-sm-2 col-md-6">Item Price:</label>
            <input asp-for="ItemPrice" placeholder="Title" class="form-control col-sm-6 col-md-8" /><br />
        </div>
        <div class="row">
            <button type="submit" class="form-control btn btn-primary col-sm-6 col-md-8 mt-3">Submit</button>
        </div>
    </form>

</div>