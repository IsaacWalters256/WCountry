@model List<WShop>
@{
    ViewData["Title"] = "WTown";
}

<h1 class="display-4">Filter WShops</h1>
Enter an owner name:
<form method="post" class="container">
    <div class="row p-2">
        <label for="owner" class="control-label col-md-1">Owner:</label>
        <input name="owner" class="form-control col-md-6" />
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-success col-2">Submit</button>
        <a asp-action="Index" class="btn btn-secondary col-3">Reset</a>
    </div>
</form>

<h2>WShops:</h2>
@foreach (WShop wshop in Model)
{
    <p>|...|...|.._____________</p>
    <p>|.......|..|...........|</p>
    <p>|...|...|..|.@wshop.WShopName</p>
    <p>|.......|..|.@wshop.Owner.UserName</p>
    <p>|...|...|..-------------</p>
    <p>|.......| </p>
    <a asp-action="ReviewPage" asp-route-wshopName="@wshop.WShopName" class="btn btn-secondary">Give Review</a>
    @foreach (Review review in wshop.Reviews)
    {
        @review.ReviewNumber
    }
}

